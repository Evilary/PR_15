<Page x:Class="Documents_Чернышков.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная страница">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0"
                Background="#BDBDBD"
                Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="📄"
                           FontSize="18"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="Учёт входящих и исходящих документов"
                           VerticalAlignment="Center"
                           Margin="10,0"
                           FontSize="14"
                           FontWeight="SemiBold"/>

                <!-- Кнопка Выйти -->
                <Button Grid.Column="2"
                        x:Name="btnExit"
                        Content="Выйти"
                        Width="80"
                        Height="26"
                        Click="Exit"/>
            </Grid>
        </Border>

        <!-- Основная область с документами -->
        <Border Grid.Row="1"
                Background="White"
                
                BorderBrush="#C0C0C0"
                BorderThickness="1">

            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-1,0,0">
                <StackPanel x:Name="parent"
                            MinHeight="300" />
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2"
                Background="White">
            <Button Grid.Row="2"
            x:Name="btnAdd"
            Content="Добавить"
            Width="100"
            Height="28"
            HorizontalAlignment="Left"
            Click="AddDocuments"
            Background="white"/>

        </Border>
        
    </Grid>
</Page>