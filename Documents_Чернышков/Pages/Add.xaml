<Page x:Class="Documents_Чернышков.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Documents_Чернышков.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#9E9E9E"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="C:\Users\df275\source\repos\Documents_Чернышков\Documents_Чернышков\Image\icon.png"
                       />

                <TextBlock Grid.Column="1"
                           Text="Добавить документ"
                           VerticalAlignment="Center"
                           Margin="10,0"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="white"/>


                <Button Grid.Column="2"
                        Content="Вернуться"
                        Width="100"
                        Height="28" Click="Button_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1"
              
              Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        VerticalAlignment="Top"
                        Margin="0,0,20,0">
                <Image Source="C:\Users\df275\source\repos\Documents_Чернышков\Documents_Чернышков\Image\icon-black.png" x:Name="src"/>
                <Button Content="Выбрать"
                        Width="100"
                        Height="30" Click="Button_Click_1"
                        />
            </StackPanel>

            <StackPanel Grid.Column="1">

                <TextBlock Text="Укажите наименование:"/>
                <TextBox Height="28" Margin="0,5,0,15" x:Name="tb_name"/>

                <TextBlock Text="Укажите ответственного:"/>
                <TextBox Height="28" Margin="0,5,0,15" x:Name="tb_user"/>

                <TextBlock Text="Укажите код документа:"/>
                <TextBox Height="28" Margin="0,5,0,15" x:Name="tb_id"/>

                <TextBlock Text="Укажите дату поступления:"/>
                <TextBox Height="28" Margin="0,5,0,15" x:Name="tb_date"/>

                <TextBlock Text="Укажите статус:"/>
                <ComboBox Height="28" Margin="0,5,0,15" x:Name="tb_status">
                    <TextBlock Text="Входящий"/>
                    <TextBlock Text="Исходящий"/>
                </ComboBox>

                <TextBlock Text="Направление:"/>
                <DockPanel Margin="0,5,0,0">
                    <TextBox Height="28" Width="480" x:Name="tb_vector"/>
                    <Button Content="Сохранить"
                            Width="100"
                            Height="28"
                            Margin="10,0,0,0" x:Name="bthAdd"/>
                </DockPanel>

            </StackPanel>
        </Grid>

    </Grid>
</Page>
